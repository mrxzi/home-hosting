# Home Hosting System Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
MONGODB_URI=mongodb://admin:hosting123@localhost:27017
REDIS_URL=redis://localhost:6379

# Dashboard Configuration
DASHBOARD_PORT=3000
DASHBOARD_SECRET=your-secret-key-here-change-this
JWT_SECRET=your-jwt-secret-key-here

# Bot Manager Configuration
BOT_MANAGER_PORT=4000

# File Manager Configuration
FILE_MANAGER_PORT=8080

# SSL Configuration (optional)
SSL_CERT_PATH=./server/ssl/cert.pem
SSL_KEY_PATH=./server/ssl/key.pem

# Bot Configuration
# Discord Bot
DISCORD_TOKEN=your-discord-bot-token-here

# Telegram Bot
TELEGRAM_TOKEN=your-telegram-bot-token-here

# Bot Owner ID (for Discord)
OWNER_ID=your-discord-user-id-here

# System Configuration
NODE_ENV=production
LOG_LEVEL=info

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE=0 2 * * *

# Monitoring Configuration
MONITORING_INTERVAL=30
PROMETHEUS_PORT=9090

# Security Configuration
# Change these default passwords!
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=password
DEFAULT_ADMIN_EMAIL=admin@localhost

# File Upload Configuration
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=js,py,ts,json,yaml,env,jpg,png,mp4,mp3,pdf,txt,md

# Network Configuration
# Internal network IP (auto-detected if not set)
INTERNAL_IP=
# External network IP (for remote access)
EXTERNAL_IP=

# Docker Configuration
DOCKER_SOCKET_PATH=/var/run/docker.sock
DOCKER_NETWORK=home-hosting-network

# Logging Configuration
LOG_DIR=./data/logs
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Performance Configuration
# CPU limit for bots (0.5 = 50% of one core)
BOT_CPU_LIMIT=0.5
# Memory limit for bots (512M = 512MB)
BOT_MEMORY_LIMIT=512M

# Webhook Configuration (for external integrations)
WEBHOOK_URL=
WEBHOOK_SECRET=

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@localhost

# Notification Configuration
NOTIFY_ON_BOT_START=true
NOTIFY_ON_BOT_STOP=true
NOTIFY_ON_ERROR=true
NOTIFY_ON_BACKUP=true
